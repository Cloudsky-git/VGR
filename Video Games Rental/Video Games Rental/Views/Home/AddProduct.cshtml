@using Video_Games_Rental.Models;
@model List<platform>
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_BackToMainLayout.cshtml";

}

    <!-- Header -->
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">Witamy w świecie gier!</div>
                <div class="intro-heading text-uppercase">Wymieniaj • Kupuj • Rezerwuj</div>
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#AddProduct">Sprawdź dostępność</a>
            </div>
        </div>
    </header>

    <div id="preloader">
        <div class="news-load"></div>
    </div>

    <!-- ADD PRODUCT -->
    <section class="page-section" id="AddProduct">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Zarezerwuj tytuł dla siebie</h2>
                    <h3 class="section-subheading text-muted">Prosimy wypełnić poniższe pola.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("GameRegister", "Home", FormMethod.Post, new { id = "gamereg-form" }))
                    {
                        <form id="contactForm" name="sentMessage" novalidate="novalidate">
                            <div class="row">
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <input class="form-control" id="tytul" type="text" placeholder="Tytuł" required="required" data-validation-required-message="Prosimy podać tytuł gry." name="gameTitle">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <select onchange="changeMe(this)" data-validation="required" class="form-control select" name="gameGenre">
                                            <option value="" selected disabled hidden>Gatunek *</option>
                                            <option class="option" value="1">Strategie</option>
                                            <option class="option" value="2">RPG (Role Playing Game)</option>
                                            <option class="option" value="3">FPS (First Person Shooter)</option>
                                            <option class="option" value="4 / Symulatory">Wyścigi / Symulatory</option>
                                            <option class="option" value="5">Przygodowe</option>
                                            <option class="option" value="6">Gry akcji</option>
                                            <option class="option" value="7">Gry karciane</option>
                                            <option class="option" value="8">MMO (Massively Multiplayer Online)</option>
                                            <option class="option" value="9">Sportowe</option>
                                            <option class="option" value="10">Logiczne</option>
                                            <option class="option" value="11" style="color:black;">Cyfrowe Gry Planszowe</option>
                                        </select>
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <select onchange="changeMe(this)" data-validation="required" class="form-control select" name="gameLanguage">
                                            <option value="" selected disabled hidden>Wersja językowa</option>
                                            <option class="option" value="Polski">Polska</option>
                                            <option class="option" value="Angielski">Angielska</option>
                                            <option class="option" value="Inny">Inna</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <select onchange="changeMe(this)" data-validation="required" class="form-control select" name="gamePlatform">
                                            <option value="" selected disabled hidden>Platforma *</option>
                                            <option class="option" value="PC">PC</option>
                                            <option class="option" value="Xbox">Xbox</option>
                                            <option class="option" value="Xbox One">Xbox One</option>
                                            <option class="option" value="PS3">PS3</option>
                                            <option class="option" value="PS4">PS4</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <select onchange="changeMe(this)" data-validation="required" class="form-control select" name="gameCondition">
                                            <option value="" selected disabled hidden>Stan</option>
                                            <option class="option" value="Nowy">Nowy</option>
                                            <option class="option" value="Uzywany">Używany</option>
                                        </select>
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" placeholder="Cena" required="required" data-validation-required-message="Prosimy podać tytuł gry." name="gamePrice">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <img class="img-thumbnail" src="~/Content/img/register.jpg" alt="Rezerwacja">
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 text-center">
                                    <div id="success"></div>
                                    <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase mt-3" type="submit">Dodaj produkt</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- Placeholder in select -->
    <script type="text/javascript">function changeMe(sel) { sel.style.color = "#555555"; }</script>