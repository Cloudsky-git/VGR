@using Video_Games_Rental.Models;
@model List<game>

@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_SearchLayout.cshtml";
}

<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Witamy w świecie gier!</div>
            <div class="intro-heading text-uppercase">Wymieniaj • Kupuj • Rezerwuj</div>
            @Html.ActionLink("Przejdź do sklepu", "../Shop", "Shop", new { area = "" }, new { @class = "btn btn-primary btn-xl text-uppercase js-scroll-trigger" })
        </div>
    </div>
</header>

<!-- Preloader Start -->
<div id="preloader">
    <div class="news-load"></div>
</div>

<section class="bg-dark p-4" id="carousel">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase mb-3 pt-0" id="news">NOWE TYTUŁY W SKLEPIE!</h2>
                <h6 class="mb-3 mt-1" id="desc">Zaktualizowana lista produktów.</h6>
            </div>
        </div>
        <div class="row">           
                <div class="row">
                    <div class="owl-carousel owl-theme">                    
                        @{ 
                            int i = 0;
                            foreach(var item in Model)
                            {
                                i++;
                                if (i <= 10)
                                {
                        <div class="single-slide">
                            <a href="@Url.Action("Details", "Shop", new { id = item.game_id }, null)"><img src="@Url.Content("~/Content/img/games/" + item.image)" /></a>
                            <div class="project_title">
                                <a href="#">
                                    <h5>
                                        @Html.ActionLink(@item.title, "Details", "Shop", new { id = item.game_id }, null)
                                    </h5>
                                    <p id="overlay_text">
                                        @Html.ActionLink(@item.description, "Details", "Shop", new { id = item.game_id }, null)
                                    </p>
                                </a>
                            </div>
                        </div>
                                    }
                                }
                            }                      
                    </div>
                </div>
        </div>
    </div>
</section>

