@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

    <!-- Header -->
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">Witamy w świecie gier!</div>
                <div class="intro-heading text-uppercase">Wymieniaj • Kupuj • Rezerwuj</div>
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#services">Dowiedz się więcej</a>
            </div>
        </div>
    </header>

    <div id="preloader">
        <div class="news-load"></div>
    </div>

    <!-- Services -->
    <section class="page-section" id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Serwis</h2>
                    <h3 class="section-subheading text-muted">Najważniejsze informacje na temat naszego serwisu</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-shopping-cart fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Szybka Obsługa Klienta</h4>
                    <p class="text-muted">Staramy się jak najszybciej i jak najefektywniej obsługiwać naszych klientów, któych zawsze traktujemy z szacunkiem.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-laptop fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Odpowiedzialni Administratorzy</h4>
                    <p class="text-muted">Nasi administratorzy dbaja o wszystkie aspekty dotyczące działania naszej strony, dzieki czemu najmniejsze błędy będą zawsze szybko korygowane!</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Bezpieczeństwo w Sieci </h4>
                    <p class="text-muted">Zapewniamy bezpieczeństwo w sieci na bardzo dobrym poziomie, dzięki czemu nasi klienci nie muszą obawiać się o swoje dane.</p>
                </div>
            </div>
        </div>
    </section>
