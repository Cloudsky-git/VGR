                </li>
                <li class="panel-list-item">
                    @Html.ActionLink("Conditions", "../conditions/Index", new { area = "" })
                </li>
                <li class="panel-list-item">
                    @Html.ActionLink("Languages", "../languages/Index", new { area = "" })
                </li>
                <li class="panel-list-item">
                    @Html.ActionLink("Orders", "../orders/Index", new { area = "" })
                </li>
                <li class="panel-list-item">
                    @Html.ActionLink("Order details", "../order_detail/Index", new { area = "" })
                </li>
                <li class="panel-list-item">
                    @Html.ActionLink("Order types", "../order_type/Index", new { area = "" })
                </li>
                <li class="panel-list-item">
