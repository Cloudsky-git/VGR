@using Video_Games_Rental.Models;
@using PagedList;
@using PagedList.Mvc;
@model Video_Games_Rental.Models.customer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SearchLayout.cshtml";
}

<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Witamy w świecie gier!</div>
            <div class="intro-heading text-uppercase">Wymieniaj • Kupuj • Rezerwuj</div>
            @Html.ActionLink("Strona Główna", "../Home/Index", "Home", new { area = "" }, new { @class = "btn btn-primary btn-xl text-uppercase js-scroll-trigger" })
        </div>
    </div>
</header>

<!-- Preloader Start -->
<div id="preloader">
    <div class="news-load"></div>
</div>

<div class="container">
    <div class="cart-card">
        <div class="container-fluid">

            @Html.Action("AspNetUsersList", "Account")

            <div class="py-1">
                @Html.ActionLink("Uzupełnij dane", "User_details", "Account", new { area = "" }, new { @class = "btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2 w-50" })
            </div>
            <div class="py-1">
                @Html.ActionLink("Twoje zamówienia", "User_details", "Account", new { area = "" }, new { @class = "btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2 w-50" })
            </div>

        </div>
    </div>
</div>