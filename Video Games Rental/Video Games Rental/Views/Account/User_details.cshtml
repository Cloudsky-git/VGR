@using Video_Games_Rental.Models;
@using PagedList;
@using PagedList.Mvc;
@model Video_Games_Rental.Models.customer
@{
    ViewBag.Title = "Account_info";
    Layout = "~/Views/Shared/_SearchLayout.cshtml";
}

<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Witamy w świecie gier!</div>
            <div class="intro-heading text-uppercase">Wymieniaj • Kupuj • Rezerwuj</div>
            @Html.ActionLink("Wróć do sklepu", "../Shop", "Shop", new { area = "" }, new { @class = "btn btn-primary btn-xl text-uppercase js-scroll-trigger" })
        </div>
    </div>
</header>

<!-- Preloader Start -->
<div id="preloader">
    <div class="news-load"></div>
</div>

<div class="container">
    <div class="cart-card">
        <div class="container-fluid">

            @{
                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <table class="table cart-table w-50 mt-3">
                        <tr class="title-row">
                            <td class="border-0 bg-secondary text-center">
                                <div class="py-1 text-uppercase">Dane użytkownika</div>
                            </td>
                        </tr>                     
                        <tr>
                            <td scope="col" class="border-0 bg-light">
                                <div class="py-1">
                                    Imie
                                </div>
                            </td>
                            <td class="border-0 bg-light text-center">
                                <div class="py-1">
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })                                    
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td scope="col" class="border-0 bg-light">
                                <div class="py-1">
                                    Nazwisko
                                </div>
                            </td>
                            <td class="border-0 bg-light text-center">
                                <div class="py-1">
                                    @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td scope="col" class="border-0 bg-light">
                                <div class="py-1">
                                    Nr Tel.
                                </div>
                            </td>
                            <td class="border-0 bg-light text-center">
                                <div class="py-1">
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td scope="col" class="border-0 bg-light">
                                <div class="py-1">
                                    Adres
                                </div>
                            </td>
                            <td class="border-0 bg-light text-center">
                                <div class="py-1">
                                    @Html.EditorFor(model => model.address_line1, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.address_line1, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td scope="col" class="border-0 bg-light">
                                <div class="py-1">
                                    Miejscowość
                                </div>
                            </td>
                            <td class="border-0 bg-light text-center">
                                <div class="py-1">
                                    @Html.EditorFor(model => model.address_line2, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.address_line2, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td scope="col" class="border-0 bg-light">
                                <div class="py-1">
                                    Kod Pocztowy
                                </div>
                            </td>
                            <td class="border-0 bg-light text-center">
                                <div class="py-1">
                                    @Html.EditorFor(model => model.postal_code, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.postal_code, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <div class="py-1">
                                    <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit" value="User_details">Zastosuj</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                }
            }          

        </div>
    </div>
</div>