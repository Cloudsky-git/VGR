@using Video_Games_Rental.Models;
@{
    ViewBag.Title = "OrderSuccess";
    Layout = "~/Views/Shared/_SearchLayout.cshtml";
}

<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Witamy w świecie gier!</div>
            <div class="intro-heading text-uppercase">Wymieniaj • Kupuj • Rezerwuj</div>
            @Html.ActionLink("Wróć do sklepu", "../Shop", "Shop", new { area = "" }, new { @class = "btn btn-primary btn-xl text-uppercase js-scroll-trigger" })
        </div>
    </div>
</header>

<!-- Preloader Start -->
<div id="preloader">
    <div class="news-load"></div>
</div>

<div class="container">
    <div class="cart-card">
        <div class="container-fliud">


            <h2>@Html.ActionLink("Home", "../Home/Index", "Home", new { @class = "backtohome" })</h2>

            @{
                foreach (var item in Model)
                {
                <table class="table cart-table w-50 mt-3">
                    <tr class="title-row">
                        <td class="border-0 bg-secondary text-center">
                            <div class="py-1 text-uppercase">Dane użytkownika</div>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col" class="border-0 bg-light">
                            <div class="py-1">Nazwa używtkownika</div>
                        </td>
                        <td class="border-0 bg-light text-center">
                            <div class="py-1">
                                @Model.AspNetUsers.UserName
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col" class="border-0 bg-light">
                            <div class="py-1">Imię</div>
                        </td>
                        <td class="border-0 bg-light text-center">
                            <div class="py-1">
                                @item.Name
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col" class="border-0 bg-light">
                            <div class="py-1">Nazwisko </div>
                        </td>
                        <td class="border-0 bg-light text-center">
                            <div class="py-1">
                                @item.Surname
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col" class="border-0 bg-light">
                            <div class="py-1">E-mail</div>
                        </td>
                        <td class="border-0 bg-light text-center">
                            <div class="py-1 ">
                                @Model.Email
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col" class="border-0 bg-light">
                            <div class="py-1">Nr Tel.</div>
                        </td>
                        <td class="border-0 bg-light text-center">
                            <div class="py-1">
                                @Model.PhoneNumber
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col" class="border-0 bg-light">
                            <div class="py-1">Adres</div>
                        </td>
                        <td class="border-0 bg-light text-center">
                            <div class="py-1">

                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col" class="border-0 bg-light">
                            <div class="py-1">Miejscowość</div>
                        </td>
                        <td class="border-0 bg-light text-center">
                            <div class="py-1">

                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col" class="border-0 bg-light">
                            <div class="py-1">Kod Pocztowy</div>
                        </td>
                        <td class="border-0 bg-light text-center">
                            <div class="py-1">
                                @item.postal_code
                            </div>
                        </td>
                    </tr>
                </table>
                    }
                }
        </div>
    </div>
</div>