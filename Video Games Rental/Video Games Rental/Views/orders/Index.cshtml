@model IEnumerable<Video_Games_Rental.Models.order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EntryLayout.cshtml";
}

<h2>Index</h2>
@if ((string)Session["myRole"] == "admin")
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customer.AspNetUsers_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_type.type)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customer.AspNetUsers_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_type.type)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.order_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.order_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.order_id })
                </td>
            </tr>
        }

    </table>
}