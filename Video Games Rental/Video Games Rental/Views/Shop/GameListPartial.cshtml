@using Video_Games_Rental.Models;
@model List<game>


@{ 
    foreach(var item in Model)
    { 
        <div class="col-6 col-md-4 float-left mt-2">
            <div class="game-list">
                <div class="game-image">
                    <a href="#"><img  class="img-thumbnail" src="@Url.Content("~/Content/img/games/"+item.image)" /></a>
                </div>
                <div class="game-details mb-3">
                    <div class="game-condition mb-2">
                        @item.condition.condition1
                    </div>
                    <div class="game-genre">
                        @item.genre.genre1
                    </div>
                    <div class="game-title">
                        <a href="#">@item.title [@item.language.language1]</a>
                    </div>
                    <div class="game-price mb-1">
                        Cena: @item.price zł
                    </div>
                </div>
            </div>
        </div>
    }
}
