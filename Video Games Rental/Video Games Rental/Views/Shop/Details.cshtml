@model Video_Games_Rental.Models.game

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_SearchLayout.cshtml";
}

<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Witamy w świecie gier!</div>
            <div class="intro-heading text-uppercase">Wymieniaj • Kupuj • Rezerwuj</div>
            @Html.ActionLink("Wróć do sklepu", "../Shop", "Shop", new { area = "" }, new { @class = "btn btn-primary btn-xl text-uppercase js-scroll-trigger" })
        </div>
    </div>
</header>

<!-- Preloader Start -->
<div id="preloader">
    <div class="news-load"></div>
</div>

<h2 class="product-detail-title mt-4">Product Detail</h2>

<div class="container">
    <div class="details-card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1"><img src="@Url.Content("~/Content/img/games/" +Model.image)" /></div>
                        <div class="tab-pane" id="pic-2"><img class="details-img" src="@Url.Content("~/Content/img/games/" +Model.image)" /></div>
                        <div class="tab-pane" id="pic-3"><img class="details-img" src="@Url.Content("~/Content/img/games/" +Model.image)" /></div>
                        <div class="tab-pane" id="pic-4"><img class="details-img" src="@Url.Content("~/Content/img/games/" +Model.image)" /></div>
                        <div class="tab-pane" id="pic-5"><img class="details-img" src="@Url.Content("~/Content/img/games/" +Model.image)" /></div>
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="@Url.Content("~/Content/img/games/" +Model.image)" /></a></li>
                        <li><a data-target="#pic-2" data-toggle="tab"><img class="details-img" src="@Url.Content("~/Content/img/games/" +Model.image)" /></a></li>
                        <li><a data-target="#pic-3" data-toggle="tab"><img class="details-img" src="@Url.Content("~/Content/img/games/" +Model.image)" /></a></li>
                        <li><a data-target="#pic-4" data-toggle="tab"><img class="details-img" src="@Url.Content("~/Content/img/games/" +Model.image)" /></a></li>
                        <li><a data-target="#pic-5" data-toggle="tab"><img class="details-img" src="@Url.Content("~/Content/img/games/" +Model.image)" /></a></li>
                    </ul>

                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.title @Model.platform.platform1 [@Model.language.language1]</h3>
                    <p class="product-description">Mortal Kombat 11 is a fighting game developed by NetherRealm Studios and published by Warner Bros. Interactive Entertainment. Running on a heavily modified version of Unreal Engine 3, it is the eleventh main installment in the Mortal Kombat series and a sequel to 2015's Mortal Kombat X.</p>
                    <h4 class="price">aktualna cena: <span>@(String.Format("{0:N0}", @Model.price))</span><span class="zl">zł</span></h4>                    
                    <div class="action mt-3">
                        @Html.ActionLink("Dodaj do koszyka", "OrderNow", "ShoppingCart", new { id = Model.game_id  }, new { @class = "btn add-to-cart btn-default m-0" })
                        @*<button class="add-to-cart btn btn-default" type="button">Dodaj do koszyka</button>*@
                        <button class="rental btn btn-default" type="button">Rezerwuj</button>
                        <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
                    </div>
                    <div>
                        @*<button class="btn undo btn-default" type="button">Wróc do sklepu</button>*@
                        @Html.ActionLink("Wróc do sklepu", "../Shop", "Shop", new { area = "" }, new { @class = "btn undo btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

